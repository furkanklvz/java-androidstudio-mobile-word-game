<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".nasilOynanirActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NASIL OYNANIR?"
        android:textColor="#511228"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="331dp"
        android:layout_height="493dp"
        android:fontFamily="sans-serif-thin"
        android:text="Oyunda size harfleri gizli bir kelime verilir ve sizden de bu kelimeyi tahmin etmeniz beklenir. Zorlandığınız kelimelerde harf alma hakkınızı kullanabilirsiniz fakat bu hakkı her kullandığınızda 100 puan kaybedersiniz. Tahmin et butonuna bastığınızda harf alma hakkınızı kaybedersiniz ve 20 saniyelik yeni bir süre başlar. Oyunun amacı 70 saniye içinde  size verilen 5 kelimeyi olabildiğince az harf alarak doğru tahmin etmek ve en yüksek puanı almaya çalışmaktır."
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.603" />

    <ImageButton
        android:id="@+id/geri_btn"
        android:layout_width="62dp"
        android:layout_height="59dp"
        android:background="#352C2C"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46"
        app:srcCompat="@android:drawable/ic_menu_revert" />

</androidx.constraintlayout.widget.ConstraintLayout>